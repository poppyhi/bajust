<!DOCTYPE html>
<html>
  <head>
    <title>Bajust</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar">
      <div class="container">
        <div id="logo"><%= link_to "Bajust", root_path %></div>
        <% if user_signed_in? %>
          <ul class="header-right">
            <li><%= link_to "プロフィール", user_show_path(id: current_user.id) %></li>
            <li><%= link_to "バンド", band_top_path %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% else %>
          <ul class="header-right">
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
          </ul>
        <% end %>
      </div>
    </header>

    <div class="container">
      <p class="alert alert-success"><%= notice %></p>
      <p class="alert alert-danger"><%= alert %></p>
    <%= yield %>
  </dev>

    <div class="container">
      <footer class="footer">
        <div class="small">
          &copy; 2017 SideLovers.
        </div>
      </footer>
    </div>

  </body>
</html>
